cabal-version:       3.0
name:                hs-playground
version:             0.1.0.0
author:              Nitin Prakash
maintainer:          prakash.nitin63@gmail.com
extra-source-files:  CHANGELOG.md

common common-options
  default-language:  Haskell2010
  build-depends:       base
                     , aeson
                     , blaze-builder
                     , conduit ^>= 1.3.4.2
                     , sqlite-simple
                     , template-haskell
                     , text
                     , unordered-containers
                     , unliftio-core
                     , unliftio
                     , syb
                     , http-types
                     , wai
                     , warp
                     , resourcet
                     , containers
                     , stm

library
  import:              common-options
  hs-source-dirs:      src
  exposed-modules:     Aeson
                       Coerce
                       Generic
                       GhcGenerics
                       HConduit
                       HResourceT
                       SqliteSimple
                       TypeFamilies
                       Wai
                       Stm
                       Main
                       Pearls.MinFree

executable hs-playground
  import:              common-options
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       hs-playground
  hs-source-dirs:      app
  ghc-options:         -O2 -threaded -rtsopts -with-rtsopts=-N4
  default-language:    Haskell2010
